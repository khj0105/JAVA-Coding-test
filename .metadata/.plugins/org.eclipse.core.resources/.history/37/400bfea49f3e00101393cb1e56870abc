		// add, poll, peek, clear, print, exit
		
		// ArrayQueue
		ArrayQueue que = new ArrayQueue(5);
		
		Scanner sc = new Scanner(System.in);
		while(true) {
			System.out.print("1.add, 2.peek, 3.poll, 4.clear, 5.print, 0.exit");
			int n = sc.nextInt();
			if(n == 0) break; // 종료
		}
	}
	
}

